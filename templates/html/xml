let 
  concatMap = https://raw.githubusercontent.com/dhall-lang/Prelude/35deff0d41f2bf86c42089c6ca16665537f54d75/Text/concatMap
in   
    \(name : Text) -> 
    \(attrs : List ./Attr) -> 
    \(contents : List Text) -> 

''<${name}${
    concatMap ./Attr (\(attr : ./Attr) -> 
        " ${attr.name}='${attr.value}'"
        ) attrs
}>${
    concatMap Text (\(t : Text) -> t) contents
}</${name}>''
